{
  "compilerOptions": {
    "target": "es2022",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "inlineSourceMap": false,
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"]
  },
  "include": ["./src/", "./tests/"],
  "exclude": ["node_modules", "lib"]
}
